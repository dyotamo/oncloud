<%= render "shared/header", value: @q %>
<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-6">
    <% if @results.empty? %>
      <h4>No results for <strong><%= @q %></strong></h4>
    <% else %>
      <span>About <strong><%= pluralize(@results.count, 'result') %></strong> found (<%= number_with_precision(@exc.stime, precision: 6) %> seconds)</span>
    <% end %>
    <% @results.each do |company| %>
      <div style="margin-bottom: 20px;">
        <h4>
          <%= link_to company.name, company_path(slug: company.slug) %>
        </h4>
        <div>
          <%= company.address %>
        </div>
        <div>
          <% if !company.description.empty? %>
            <%= company.description %>
          <% else %>
            (No description) 
          <% end %>
        </div>
      </div>
    <% end %>
    <%= will_paginate @results, renderer: BootstrapPagination::Rails %>
  </div>
</div>
