<% title "Resultados para " + @q %>
<%= render "shared/header", value: @q %>
<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-6">
    <% if @results.empty? %>
      <h4>NÃ£o foram encontrados resultados para <strong><%= @q %></strong></h4>
    <% else %>
      <span>
        Aproximadamente <%= pluralize(@results.count, 'resultado') %> (<%= number_with_precision(@exc.stime, precision: 6) %> segundos)
      </span>
    <% end %>
    <div style="margin-top: 20px;">
      <% @results.each do |company| %>
        <div style="margin-bottom: 20px;">
          <h4>
            <%= link_to company.name, company_path(slug: company.slug) %>
          </h4>
          <div>
            <%= company.address %>
          </div>
          <div>
            <% if !company.description.empty? %>
              <%= company.description %>
            <% else %>
              (Sem detalhes) 
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div>
      <%= will_paginate @results, previous_label: "<", next_label: ">", renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
