<%= form_tag(search_path, method: :get) do %>
  <div class="input-group form-group">
    <%= text_field_tag :q, value, placeholder: "Search Oncloud ...", value: value, class: "form-control", style: "border-radius: 0;" %>
    <span class="input-group-btn">
      <%= button_tag(type: 'submit', class: "btn btn-primary", style: "border-radius: 0;") do %>
        <span class="glyphicon glyphicon-search"></span>
      <% end %>
    </span>
  </div>
<% end %>
