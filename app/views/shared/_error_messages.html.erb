<% if model.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      O formulário contém <%= pluralize(model.errors.count, "erro") %>.
    </div>
    <ul class="text-danger">
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
